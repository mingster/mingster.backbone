{
  "compilerOptions": {
      "jsx": "react-jsx",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "incremental": false,
      "downlevelIteration": true,
      "lib": [
          "dom",
          "dom.iterable",
          "esnext"
      ],
      "module": "esnext",
      "moduleResolution": "bundler",
      "types": ["node"]
  },
  "include": [
      "src",
      "tsup.config.ts"]
}
